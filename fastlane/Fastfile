default_platform(:mac)

platform :mac do
  
  lane :package do
    setup
    build
    clean

  end
  
  
  private_lane :setup do
    commit = last_git_commit
    date = Time.new.strftime("%Y.%m.%d %k:%M")  

    increment_version_number_in_plist(version_number: ENV["APP_VERSION"])
	  increment_build_number_in_plist(build_number: ENV["APP_VERSION"])
    set_info_plist_value(
      path: "#{ENV["APP_NAME"]}/Info.plist", 
      key: "CommitHash", value: commit[:abbreviated_commit_hash],
      key: "CommitDate", value: date)
  end


  private_lane :build do 
    build_app(
      clean: true,
      silent: true,
      export_method: 'mac-application')
  end

  private_lane :clean do
    sh "rm -vfr ~/Library/Developer/Xcode/Archives/*"
  end


end
